<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// RsyncPage template //-->
  <template class="RsyncPage" parent="AdwNavigationPage">
    <property name="title">Rsync</property>
    <property name="tag">rsync</property>
    <property name="can-pop">false</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar"/>
        </child>
        <property name="content">
          <object class="GtkBox" id="main_box">
            <property name="orientation">vertical</property>
            <property name="margin-start">24</property>
            <property name="margin-end">24</property>
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>
            <property name="spacing">24</property>
            <child>
              <object class="GtkBox" id="status_box">
                <style>
                  <class name="card"/>
                </style>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="margin-start">24</property>
                    <property name="margin-end">24</property>
                    <property name="margin-top">16</property>
                    <property name="margin-bottom">16</property>
                    <property name="spacing">14</property>
                    <child>
                      <object class="GtkBox">
                        <property name="margin-bottom">4</property>
                        <property name="spacing">16</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">rsync-sync-symbolic</property>
                            <style>
                              <class name="bubble"/>
                              <class name="accent"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="xalign">0</property>
                            <property name="label">Rsync Transfer</property>
                            <style>
                              <class name="title-3"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="message_box">
                        <property name="spacing">10</property>
                        <child>
                          <object class="GtkImage" id="message_image">
                            <property name="icon-name">rsync-message-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="message_label">
                            <property name="xalign">0</property>
                            <property name="ellipsize">start</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkCenterBox">
                        <property name="hexpand">true</property>
                        <property name="start-widget">
                          <object class="GtkBox">
                            <property name="spacing">10</property>
                            <property name="tooltip-text">Transfer Size</property>
                            <child>
                              <object class="GtkImage">
                                <property name="icon-name">rsync-transferred-symbolic</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="transferred_label">
                                <property name="label">0B</property>
                              </object>
                            </child>
                          </object>
                        </property>
                        <property name="center-widget">
                          <object class="GtkBox">
                            <property name="spacing">10</property>
                            <property name="tooltip-text">Transfer Speed</property>
                            <child>
                              <object class="GtkImage">
                                <property name="icon-name">rsync-speed-symbolic</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="speed_label">
                                <property name="label">0B/s</property>
                              </object>
                            </child>
                          </object>
                        </property>
                        <property name="end-widget">
                          <object class="GtkBox">
                            <property name="spacing">10</property>
                            <property name="tooltip-text">Progress</property>
                            <child>
                              <object class="GtkLabel" id="progress_label">
                                <property name="label">0%</property>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkProgressBar" id="progress_bar">
                        <property name="hexpand">true</property>
                        <property name="valign">center</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="source_box">
                        <property name="spacing">10</property>
                        <property name="tooltip-text">Source</property>
                        <child>
                          <object class="GtkImage" id="source_image">
                            <property name="icon-name">rsync-source-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="source_label">
                            <property name="xalign">0</property>
                            <property name="ellipsize">start</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="destination_box">
                        <property name="spacing">10</property>
                        <property name="tooltip-text">Destination</property>
                        <child>
                          <object class="GtkImage" id="destination_image">
                            <property name="icon-name">rsync-destination-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="destination_label">
                            <property name="xalign">0</property>
                            <property name="ellipsize">start</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkStack" id="stack">
                <property name="vhomogeneous">true</property>
                <property name="transition-type">crossfade</property>
                <property name="transition-duration">100</property>
                <property name="margin-top">8</property>
                <property name="margin-bottom">8</property>
                <child>
                  <object class="GtkStackPage">
                    <property name="name">empty</property>
                    <property name="child">
                      <object class="GtkBox"/>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="name">buttons</property>
                    <property name="child">
                      <object class="GtkBox" id="button_box">
                        <property name="halign">center</property>
                        <property name="valign">end</property>
                        <property name="spacing">24</property>
                        <child>
                          <object class="GtkButton" id="pause_button">
                            <property name="action-name">rsync.pause</property>
                            <property name="child">
                              <object class="AdwButtonContent" id="pause_content">
                                <property name="icon-name">rsync-pause-symbolic</property>
                                <property name="label">_Pause</property>
                                <property name="use-underline">true</property>
                              </object>
                            </property>
                            <style>
                              <class name="pill"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="stop_button">
                            <property name="action-name">rsync.terminate</property>
                            <property name="child">
                              <object class="AdwButtonContent">
                                <property name="icon-name">rsync-stop-symbolic</property>
                                <property name="label">_Stop</property>
                                <property name="use-underline">true</property>
                              </object>
                            </property>
                            <style>
                              <class name="pill"/>
                              <class name="destructive-action"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="name">stats</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">24</property>
                        <child>
                          <object class="StatsTable" id="stats_table"/>
                        </child>
                        <child>
                          <object class="GtkButton" id="log_button">
                            <property name="halign">center</property>
                            <property name="margin-top">8</property>
                            <property name="child">
                              <object class="AdwButtonContent">
                                <property name="icon-name">document-edit-symbolic</property>
                                <property name="label">Rsync _Log</property>
                                <property name="use-underline">true</property>
                              </object>
                            </property>
                            <style>
                              <class name="pill"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
