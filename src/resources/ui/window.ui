<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// AppWindow template //-->
  <template class="AppWindow" parent="AdwApplicationWindow">
    <property name="default-width">800</property>
    <property name="default-height">800</property>
    <property name="content">
      <object class="AdwNavigationSplitView">
        <property name="sidebar">
          <object class="AdwNavigationPage" id="sidebar_nav_page">
            <property name="title">RsyncUI</property>
            <property name="child">
              <object class="AdwToolbarView">
                <child type="top">
                  <object class="AdwHeaderBar">
                  </object>
                </child>
                <property name="content">
                  <object class="GtkBox">
                    <child>
                      <object class="GtkScrolledWindow">
                        <property name="hexpand">true</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">12</property>
                        <property name="child">
                          <object class="GtkListView" id="sidebar_view">
                            <style>
                              <class name="navigation-sidebar"/>
                            </style>
                            <property name="margin-start">6</property>
                            <property name="margin-end">6</property>
                            <property name="tab-behavior">item</property>
                            <property name="model">
                              <object class="GtkSingleSelection" id="sidebar_selection">
                                <property name="model">
                                  <object class="GListStore" id="sidebar_model">
                                    <property name="item-type">ProfileObject</property>
                                  </object>
                                </property>
                              </object>
                            </property>
                            <property name="factory">
                              <object class="GtkBuilderListItemFactory">
                                <property name="resource">/com/github/RsyncUI/ui/sidebar_view/item.ui</property>
                              </object>
                            </property>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </property>
                <child type="bottom">
                  <object class="GtkBox">
                    <property name="margin-start">18</property>
                    <property name="margin-end">18</property>
                    <property name="margin-top">8</property>
                    <property name="margin-bottom">12</property>
                    <property name="spacing">6</property>
                    <child>
                      <object class="GtkButton" id="profile_add_button">
                        <property name="icon-name">list-add-symbolic</property>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="profile_delete_button">
                        <property name="icon-name">edit-delete-symbolic</property>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="profile_reset_button">
                        <property name="icon-name">edit-undo-symbolic</property>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
        <property name="content">
          <object class="AdwNavigationPage" id="profile_nav_page">
            <property name="child">
              <object class="ProfilePane" id="profile_pane"/>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
