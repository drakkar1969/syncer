<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// AppWindow template //-->
  <template class="AppWindow" parent="AdwApplicationWindow">
    <property name="default-width">650</property>
    <property name="default-height">600</property>
    <property name="title">Syncer</property>
    <property name="content">
      <object class="GtkStack" id="status_stack">
        <child>
          <object class="GtkStackPage">
            <property name="name">status</property>
            <property name="child">
              <object class="AdwToolbarView">
                <child type="top">
                  <object class="AdwHeaderBar"/>
                </child>
                <property name="content">
                  <object class="AdwStatusPage">
                    <property name="icon-name">document-edit-symbolic</property>
                    <property name="title">Welcome to Syncer</property>
                    <property name="description">Create a new profile to get started</property>
                    <property name="child">
                      <object class="GtkButton" id="status_new_button">
                        <property name="halign">center</property>
                        <property name="label">Create _New Profile</property>
                        <property name="use-underline">true</property>
                        <style>
                          <class name="suggested-action"/>
                          <class name="pill"/>
                        </style>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">main</property>
            <property name="child">
              <object class="AdwNavigationView" id="navigation_view">
                <property name="hhomogeneous">true</property>
                <property name="vhomogeneous">true</property>
                <child>
                  <object class="OptionsPage" id="options_page"/>
                </child>
                <child>
                  <object class="AdvancedPage" id="advanced_page"/>
                </child>
                <child>
                  <object class="RsyncPage" id="rsync_page"/>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
