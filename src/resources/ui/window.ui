<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// AppWindow template //-->
  <template class="AppWindow" parent="AdwApplicationWindow">
    <property name="default-width">820</property>
    <property name="default-height">630</property>
    <property name="width-request">520</property>
    <property name="height-request">640</property>
    <property name="title">RsyncUI</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 650px</condition>
        <setter object="split_view" property="collapsed">true</setter>
      </object>
    </child>
    <property name="content">
      <object class="AdwOverlaySplitView" id="split_view">
        <property name="max-sidebar-width">240</property>
        <property name="sidebar">
          <object class="Sidebar" id="sidebar"/>
        </property>
        <property name="content">
          <object class="GtkStack" id="content_stack">
            <child>
              <object class="GtkStackPage">
                <property name="name">status</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="icon-name">document-edit-symbolic</property>
                    <property name="title">Welcome to RsyncUI</property>
                    <property name="description">Create a new profile to get started</property>
                    <property name="child">
                      <object class="GtkButton" id="new_profile_button">
                        <property name="halign">center</property>
                        <property name="label">Create _New Profile</property>
                        <property name="use-underline">true</property>
                        <style>
                          <class name="suggested-action"/>
                          <class name="pill"/>
                        </style>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">profile</property>
                <property name="child">
                  <object class="AdwNavigationView" id="content_navigation_view">
                    <property name="hhomogeneous">true</property>
                    <property name="vhomogeneous">true</property>
                    <child>
                      <object class="OptionsPage" id="options_page"/>
                    </child>
                    <child>
                      <object class="AdvancedPage" id="advanced_page"/>
                    </child>
                    <child>
                      <object class="RsyncPage" id="rsync_page"/>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
