<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// OptionsPage template //-->
  <template class="OptionsPage" parent="AdwNavigationPage">
    <property name="title">Options</property>
    <property name="tag">options</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="GtkDropDown" id="profile_dropdown">
                <style>
                  <class name="flat"/>
                </style>
                <property name="width-request">250</property>
                <property name="model">
                  <object class="GListStore" id="profile_model">
                    <property name="item-type">ProfileObject</property>
                  </object>
                </property>
                <property name="factory">
                  <object class="GtkBuilderListItemFactory">
                    <property name="resource">/com/github/Syncer/ui/options_page/profile_item.ui</property>
                  </object>
                </property>
                <property name="list-factory">
                  <object class="GtkBuilderListItemFactory">
                    <property name="resource">/com/github/Syncer/ui/options_page/profile_list_item.ui</property>
                  </object>
                </property>
              </object>
            </property>
            <child type="end">
              <object class="GtkMenuButton" id="mainmenu_button">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="primary">true</property>
                <property name="tooltip-text">Main Menu</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="GtkScrolledWindow">
            <property name="margin-top">24</property>
            <property name="margin-bottom">36</property>
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <property name="child">
              <object class="GtkBox" id="content_box">
                <property name="orientation">vertical</property>
                <property name="margin-start">48</property>
                <property name="margin-end">48</property>
                <property name="spacing">24</property>
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Paths</property>
                    <property name="header-suffix">
                      <object class="GtkBox">
                        <property name="spacing">8</property>
                        <child>
                          <object class="GtkToggleButton" id="copy_by_name_button">
                            <property name="icon-name">options-copy-byname-symbolic</property>
                            <property name="tooltip-text">Copy Source Directory by Name</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="swap_paths_button">
                            <property name="icon-name">options-swap-symbolic</property>
                            <property name="tooltip-text">Swap Source With Destination</property>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </property>
                    <child>
                      <object class="AdwActionRow" id="source_row">
                        <property name="activatable">true</property>
                        <property name="title">_Source</property>
                        <property name="use-underline">true</property>
                        <style>
                          <class name="property"/>
                        </style>
                        <child type="prefix">
                          <object class="GtkImage">
                            <property name="valign">center</property>
                            <property name="icon-name">folder-open-symbolic</property>
                            <style>
                              <class name="bubble"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">go-next-symbolic</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow" id="destination_row">
                        <property name="activatable">true</property>
                        <property name="title">_Destination</property>
                        <property name="use-underline">true</property>
                        <style>
                          <class name="property"/>
                        </style>
                        <child type="prefix">
                          <object class="GtkImage">
                            <property name="valign">center</property>
                            <property name="icon-name">folder-open-symbolic</property>
                            <style>
                              <class name="bubble"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">go-next-symbolic</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Options</property>
                    <property name="vexpand">true</property>
                    <child>
                      <object class="AdwComboRow" id="check_mode_combo">
                        <property name="title">File _Check</property>
                        <property name="use-underline">true</property>
                        <child type="prefix">
                          <object class="GtkImage">
                            <property name="valign">center</property>
                            <property name="icon-name">selection-mode-symbolic</property>
                            <style>
                              <class name="bubble"/>
                            </style>
                          </object>
                        </child>
                        <property name="model">
                          <object class="AdwEnumListModel">
                            <property name="enum-type">CheckMode</property>
                          </object>
                        </property>
                        <property name="expression">
                          <lookup type="AdwEnumListItem" name="name"/>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwComboRow" id="recurse_mode_combo">
                        <property name="title">Rec_ursion</property>
                        <property name="use-underline">true</property>
                        <child type="prefix">
                          <object class="GtkImage">
                            <property name="valign">center</property>
                            <property name="icon-name">options-recurse-symbolic</property>
                            <style>
                              <class name="bubble"/>
                            </style>
                          </object>
                        </child>
                        <property name="model">
                          <object class="AdwEnumListModel">
                            <property name="enum-type">RecurseMode</property>
                          </object>
                        </property>
                        <property name="expression">
                          <lookup type="AdwEnumListItem" name="name"/>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow" id="options_row">
                        <property name="activatable">true</property>
                        <property name="title">_Advanced Options</property>
                        <property name="subtitle">Configure rsync options</property>
                        <property name="use-underline">true</property>
                        <property name="action-name">navigation.push</property>
                        <property name="action-target">'advanced'</property>
                        <child type="prefix">
                          <object class="GtkImage">
                            <property name="valign">center</property>
                            <property name="icon-name">system-run-symbolic</property>
                            <style>
                              <class name="bubble"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">go-next-symbolic</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="FilterExpanderRow" id="filter_expander_row"/>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="halign">center</property>
                    <property name="homogeneous">true</property>
                    <property name="margin-top">24</property>
                    <property name="spacing">36</property>
                    <child>
                      <object class="GtkButton" id="dryrun_button">
                        <property name="label">Dr_y Run</property>
                        <property name="use-underline">true</property>
                        <property name="action-name">rsync.start</property>
                        <property name="action-target">true</property>
                        <style>
                          <class name="pill"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="rsync_button">
                        <property name="action-name">rsync.start</property>
                        <property name="action-target">false</property>
                        <property name="child">
                          <object class="AdwButtonContent">
                            <property name="icon-name">rsync-start-symbolic</property>
                            <property name="label">Start _Rsync</property>
                            <property name="use-underline">true</property>
                          </object>
                        </property>
                        <style>
                          <class name="suggested-action"/>
                          <class name="pill"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>

  <!--// Primary menu //-->
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label">New Profile…</attribute>
        <attribute name="action">profile.new</attribute>
      </item>
    </section>
    <section>
      <submenu>
        <attribute name="label">Profile</attribute>
        <section>
          <item>
            <attribute name="label">Rename…</attribute>
            <attribute name="action">profile.rename</attribute>
          </item>
          <item>
            <attribute name="label">Delete…</attribute>
            <attribute name="action">profile.delete</attribute>
          </item>
          <item>
            <attribute name="label">Duplicate…</attribute>
            <attribute name="action">profile.duplicate</attribute>
          </item>
        </section>
        <section>
          <item>
            <attribute name="label">Reset to Default…</attribute>
            <attribute name="action">profile.reset</attribute>
          </item>
        </section>
      </submenu>
    </section>
    <section>
      <item>
        <attribute name="label">Delete All Profiles…</attribute>
        <attribute name="action">profile.delete-all</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Rsync Command Line</attribute>
        <attribute name="action">rsync.show-cmdline</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Keyboard Shortcuts</attribute>
        <attribute name="action">app.shortcuts</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">About Syncer</attribute>
        <attribute name="action">app.show-about</attribute>
      </item>
    </section>
  </menu>
</interface>
