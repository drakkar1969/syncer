<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!--// AdvancedPage template //-->
  <template class="AdvancedPage" parent="AdwNavigationPage">
    <property name="title">Advanced Options</property>
    <property name="tag">advanced</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar"/>
        </child>
        <property name="content">
          <object class="GtkScrolledWindow">
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <property name="child">
              <object class="GtkBox" id="switches_box">
                <property name="orientation">vertical</property>
                <property name="margin-start">24</property>
                <property name="margin-end">24</property>
                <property name="spacing">24</property>
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Advanced Options</property>
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Recursive</property>
                        <property name="subtitle">Recurse into directories [ --recursive | -r ]</property>
                        <property name="prop-name">recursive</property>
                        <property name="param">-r</property>
                        <property name="alt-param">-d</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Preserve Time</property>
                        <property name="subtitle">Preserve modification times [ --times | -t ]</property>
                        <property name="prop-name">preserve-time</property>
                        <property name="param">-t</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Preserve Permissions</property>
                        <property name="subtitle">Preserve permissions [ --perms | -p ]</property>
                        <property name="prop-name">preserve-permissions</property>
                        <property name="param">-p</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Preserve Owner</property>
                        <property name="subtitle">Preserve owner [ --owner | -o ]</property>
                        <property name="prop-name">preserve-owner</property>
                        <property name="param">-o</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Preserve Group</property>
                        <property name="subtitle">Preserve group [ --group | -g ]</property>
                        <property name="prop-name">preserve-group</property>
                        <property name="param">-g</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Keep Numeric IDs</property>
                        <property name="subtitle">Do not map numeric uid/gid to user and group names [ --numeric-ids ]</property>
                        <property name="prop-name">numeric-ids</property>
                        <property name="param">--numeric-ids</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Preserve Symlinks</property>
                        <property name="subtitle">Copy symlinks as symlinks [ --links | -l ]</property>
                        <property name="prop-name">preserve-symlinks</property>
                        <property name="param">-l</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Preserve Hardlinks</property>
                        <property name="subtitle">Copy hardlinks as hardlinks [ --hard-links | -H ]</property>
                        <property name="prop-name">preserve-hardlinks</property>
                        <property name="param">-H</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Preserve Devices</property>
                        <property name="subtitle">Preserve device and special files [ --devices --specials | -D ]</property>
                        <property name="prop-name">preserve-devices</property>
                        <property name="param">-D</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Do Not Leave Filesystem</property>
                        <property name="subtitle">Do not cross filesystem boundaries [ --one-file-system | -x ]</property>
                        <property name="prop-name">one-filesystem</property>
                        <property name="param">-x</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Delete on Destination</property>
                        <property name="subtitle">Delete extraneous files on destination [ --delete ]</property>
                        <property name="prop-name">delete-destination</property>
                        <property name="param">--delete</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Existing Only</property>
                        <property name="subtitle">Skip creating new files and directories on destination [ --existing ]</property>
                        <property name="prop-name">existing</property>
                        <property name="param">--existing</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Ignore Existing</property>
                        <property name="subtitle">Skip files (not directories) that exist on destination [ --ignore-existing ]</property>
                        <property name="prop-name">ignore-existing</property>
                        <property name="param">--ignore-existing</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Skip Newer</property>
                        <property name="subtitle">Skip files that are newer on destination [ --update | -u ]</property>
                        <property name="prop-name">skip-newer</property>
                        <property name="param">-u</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Partial Transfers</property>
                        <property name="subtitle">Keep partially transferred files on destination [ --partial ]</property>
                        <property name="prop-name">partial</property>
                        <property name="param">--partial</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Compress File Data</property>
                        <property name="subtitle">Compress file data when transferring [ --compress | -z ]</property>
                        <property name="prop-name">compress-data</property>
                        <property name="param">-z</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Backup Files</property>
                        <property name="subtitle">Make backups of existing files on destination [ --backup | -b ]</property>
                        <property name="prop-name">backup</property>
                        <property name="param">-b</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdvSwitchRow">
                        <property name="title">Secluded Args</property>
                        <property name="subtitle">Protect remote arguments from shell expansion [ --secluded-args | -s ]</property>
                        <property name="prop-name">secluded-args</property>
                        <property name="param">-s</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
